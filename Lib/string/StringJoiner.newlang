export StringJoiner

class StringJoiner {
    private str joiner
    private final list[str] values

    public operator new(str joiner) {
        self.joiner = joiner
        self.values = []
    }

    public operator str {
        return joiner.join(values)
    }

    public mut method add(str value) -> cls {
        self.values.append(value)
        return cls
    }
}
